@model LoginViewModel

@{
    ViewData["Title"] = "ورود";
}

	<div class="limiter" >
		<div class="container-login100">
			<div class="wrap-login100">


			<form class="login100-form validate-form"  asp-controller="Account" asp-action="Login" method="post">
				<span class="login100-form-title">ورود به ناحیه کاربری</span>

				<!-- enter email-->
				<div class="wrap-input100 validate-input"  data-validate = "لطفا پست الکترونیک خود را وارد کنید!">
					<input class="input100" asp-for=Email type="text" name="email" placeholder="پست الکترونیک">
					<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
				</div>
				<!-- / enter email -->

				<!-- enter password-->
				<div class="wrap-input100 validate-input" data-validate = "لطفا رمز عبور را وارد کنید!">
					<input class="input100" asp-for=Password type="password"placeholder="رمز عبور">
					<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
				</div>
				<!-- / enter password-->

				<!-- login button-->
				<div class="container-login100-form-btn">
					<button class="login100-form-btn" type="submit">ورود</button>
				</div>
				<!-- / login button -->

			

				<!-- register-->
				<div class="text-center p-t-136">
					<a class="txt2" asp-controller="Account" asp-action="Register" >
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true" ></i>
						هنوز ثبت نام نکرده اید ؟
					</a>
				</div>
				<!-- / register-->

			</form>
			<!-- / input form -->

			<!-- form image -->
			<div class="login100-pic js-tilt" data-tilt>
				<img src="~/LoginStyle/pics/img-01.png" alt="IMG">
			</div>
			<!-- / form image -->

			</div>
		</div>
	</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
